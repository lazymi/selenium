HERE WE CREATE 3 FILES: TEST1  TEST2  XML  --->create seperate files for these 3

tes1.java

package day1;  
import org.testng.annotations.Test;  
  
public class module1   
{  
    @Test  
    public void test1()  
    {  
        System.out.println("Hello javaTpoint!!");  
    }  
      
    @Test  
    public void test2()  
    {  
        System.out.println("JTP Travels");  
    }}  


test2.java

package day1;  
  
import org.testng.annotations.Test;  
  
public class module2   
{  
    @Test  
  public void test3()  
  {  
      System.out.println("hindi100.com");  
  }  
}  


.xml file

<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">  
<suite name="loan_department">  
  <test name="Personal_loan">  
    <classes>  
      <class name="day1.module1"/>  
      <class name="day1.module2"/>  
    </classes>  
  </test> <!-- Test -->  
</suite> <!-- Suite -->  
